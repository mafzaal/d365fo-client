# Integration Testing Configuration
# Copy this file to .env and configure your environment

# Test Level Configuration
# Values: mock, sandbox, live, all
INTEGRATION_TEST_LEVEL=mock

# D365 F&O Environment URLs
# Sandbox/Test Environment
D365FO_SANDBOX_BASE_URL=https://your-sandbox.sandbox.operations.dynamics.com

# Production Environment (optional)
D365FO_LIVE_BASE_URL=https://your-prod.operations.dynamics.com

# Azure AD Authentication
# Service Principal credentials
AZURE_CLIENT_ID=your-app-registration-id
AZURE_CLIENT_SECRET=your-app-secret
AZURE_TENANT_ID=your-tenant-id

# Alternative: Use Azure CLI authentication
# Run 'az login' and comment out the above credentials

# Mock Server Configuration
MOCK_SERVER_PORT=8000
MOCK_SERVER_HOST=localhost

# Test Configuration
PYTEST_TIMEOUT=300
PYTEST_VERBOSE=false
GENERATE_COVERAGE=false

# Performance Test Thresholds (seconds)
MAX_CONNECTION_TIME=10
MAX_VERSION_CALL_TIME=15
MAX_METADATA_CALL_TIME=30
MAX_DATA_OPERATION_TIME=60

# Test Data Configuration
TEST_CUSTOMER_ACCOUNT=TEST-001
TEST_VENDOR_ACCOUNT=TEST-V001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s