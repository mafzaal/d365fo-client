# Integration Testing Environment Configuration
# Copy this file to .env and fill in your values

# Test Environment Level (mock, sandbox, live, all)
INTEGRATION_TEST_LEVEL=sandbox

# Sandbox Environment Configuration
D365FO_SANDBOX_BASE_URL=https://usnconeboxax1aos.cloud.onebox.dynamics.com

# Live Environment Configuration (optional)
# D365FO_LIVE_BASE_URL=https://your-d365-production.cloudax.dynamics.com

# Azure Authentication (if not using default credentials)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# Optional: Override default credentials
# USE_DEFAULT_CREDENTIALS=true

# Optional: SSL verification (set to false for test environments)
# VERIFY_SSL=false

# Optional: Request timeout in seconds
# TIMEOUT=60